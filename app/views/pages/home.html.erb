<div class="banner">
  <div id="hometitle">
  <h1><%= image_tag "logo-sloop.png" %> Blabla'Sloop</h1>
  <h2>Trouve ton cobaturage !</h2>
  </div>
  <div class= "d-grid gap-2 col-7 mx-auto d-md-flex justify-content-md-center pb-3">
      <%= link_to "Voir les demandes", ride_requests_path, class: "btn btn-lg btn-success m-1"%>
      <%= link_to "Voir les offres", rides_path, class: "btn btn-lg btn-warning m-1"%>
  </div>
</div>


<div class="container" >

    <h2 class="my-3 py-2", id="last_propal">Derniers voyages proposés</h2>
    <div class= "row row-cols-sm-2 row-cols-lg-3">
    <% @rides.each do |ride| %>
      <%= render 'shared/cardride', ride: ride %>
    <% end %>
    </div>

    <h2 class="my-3 py-2", id="last_ask"><strong>Derniers voyages demandés</strong></h2>
    <div class= "row row-cols-sm-2 row-cols-lg-3">
    <% @rides_requests.each do |riderequest| %>
      <%= render 'shared/riderequestcard', riderequest: riderequest %>
    <% end %>
    </div>

</div>
