
  <!-- Profil de l'utilisateur -->
  <div class="card shadow-sm bg-white rounded">
    <div class="card-body">
      <div class="text-center">
        <%= cl_image_tag current_user.photo.key, class: "profil-avatar", alt: "dropdown menu", radius: "max" %>
        <br>
        <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
        <span><em class="text-muted"><%= current_user.age %> ans</em></span>
        <ul class="list-inline ">
          <li class="list-inline-item bg-white"><i class="fa-regular fa-envelope"></i> <%= current_user.email %></li>
          <li class="list-inline-item bg-white"><i class="fa-solid fa-mobile-retro"></i> <%= current_user.phone_number %></li>
        </ul>
      </div>
      <hr>
<!-- Détails de l'utilisateur -->
      <div class="text-start">
        <h2 class="">À propos</h4>
        <p><%= current_user.description %></p>
        <h4 class="lead">Préférences</h4>
        <p><%= current_user.preferences %></p>
      </div>
<!-- Sloops de l'utilisateur -->
        <h3 class="mb-4"> <%= pluralize(current_user.sloops.size, "Sloop") %> </h3>
        <div class="row">
          <% current_user.sloops.each do |sloop| %>
            <div class="col-md-4 mb-4">
              <div class="card shadow-sm">
                <% if sloop.photos.any? %>
                  <%= cl_image_tag sloop.photos.first.key, class: "", height: 200, crop: :fill %>
                <% else %>
                  <img class="card-img-top" src="default_image.jpg" alt="Default image">
                <% end %>
                <div class="card-body">
                  <h3 class="card-title"><%= sloop.name %></h3>
                  <p class="card-text"><%= sloop.description %></p>
                  <div class="d-flex justify-content-between">
                    <%= link_to "Voir", sloop, class: "" %>
                      <% if sloop.rides == [] %>
                        <%= link_to sloop_path(sloop), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } do %>
                          <i class="bi bi-trash"></i> <!-- Icone poubelle Bootstrap -->
                        <% end %>
                      <% else %>
                        <%= link_to "Location en cours", rides_path, class: "" %>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
  </div>
</div>
