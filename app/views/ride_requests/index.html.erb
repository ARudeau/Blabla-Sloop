<div class="container mb-3">
<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: ride_requests_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Recherche"
        %>
      <%= submit_tag "Rechercher", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  <div class="cards mt-2">
  <div class="row ">
    <div>
      <h2 class="display-4 text-center my-4">Toutes les demandes de voyage</h2>
      <br>
      <div class="d-flex justify-content-evenly align-items-center mb-3">
        <%= link_to "Faire une demande de voyage", new_ride_request_path, class: "btn btn-primary" %>
      </div>
      <hr>
      <span class="mb-3 d-block"><em><%= "Aucun résultat pour votre recherche, consultez la carte pour voir tous les ridesrequests disponibles" if @riderequests.empty? %></em></span>
      <span class="mb-3 d-block"><em><%= "#{pluralize(@riderequests.count, "Résultat(s)")}" if @riderequests.count  %></em></span>
    </div>
    <% @riderequests.each do |riderequest| %>
      <%= render "shared/riderequestcard", riderequest: riderequest %>
    <% end %>
  </div>
</div>
</div>
