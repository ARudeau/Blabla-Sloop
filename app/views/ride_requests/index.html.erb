<div class="container mb-3">
  <div class="cards mt-2">
  <div class="row">
    <div>
      <h1 class="display-4 text-center my-4">Toutes les Ride Requests disponibles</h1>
      <span class="mb-3 d-block"><em><%= "Aucun résultat pour votre recherche, consultez la carte pour voir tous les ridesrequests disponibles" if @riderequests.empty? %></em></span>
      <span class="mb-3 d-block"><em><%= "#{pluralize(@riderequests.count, "résultat")}" if @riderequests.count  %></em></span>
    </div>
    <% @riderequests.each do |riderequest| %>
      <%= render "shared/riderequestcard", riderequest: riderequest %>
    <% end %>
  </div>
</div>
