<div class="container mt-4 mb-5">
  <h1>Demande de location</h1>
  <hr>
  <%= simple_form_for [@riderequest] do |f| %>
      <%= f.input :details, label: 'Commentaires'%>
      <%= f.input :start_port, label: 'Port de départ'%>
      <%= f.input :end_port, label: "Port d'arrivé"%>
      <%= f.input :start_date, as: :string,
      label: "Date de début", input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :end_date, as: :string,
      label: "Date de fin", input_html: { data: { controller: "datepicker" } } %>
      <%= f.button :submit, 'Poster', class:"btn btn-primary"%>
  <% end %>
  </div>
