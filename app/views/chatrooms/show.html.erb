<div class="container chat">
  <h1>Vos Ã©changes <%= @chatroom.ride %></h1>

  <div id="messages" class="messages">
    <% @chatroom.user_messages.each do |user_message| %>
      <div id="message-<%= user_message.id %>">
        <small>
          <strong><%= user_message.user.first_name %></strong>
          <i><%= user_message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= user_message.content %></p>
      </div>
    <% end %>
  </div>
</div>

<%= simple_form_for [@chatroom, @user_message],
  html: {class: "d-flex"} do |f|
%>
  <% other_user = current_user == @chatroom.ride.sloop.user ? @chatroom. : @chatroom.ride.user %>
  <%= f.input :content,
    label: false,
    placeholder: "Message #{other_user.first_name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
