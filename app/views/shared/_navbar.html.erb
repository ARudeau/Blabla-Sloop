<div class="navbar navbar-expand navbar-light navbar-lewagon">
  <div class="container">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to do %>
              <i class="fa-regular fa-bell"></i>
            <% end %>
            <% if current_user.sloops.any? %>
              <%= link_to ride_requests_path do %>
                <i class="fa-solid fa-magnifying-glass"></i>
              <% end %>
            <% else %>
              <%= link_to rides_path do %>
                <i class="fa-solid fa-magnifying-glass"></i>
              <% end %>
            <% end %>
            <%= link_to profil_path, class: "avatar" do %>
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar" %>
              <% elsif %>
                <% image_tag "logo-sloop.png", class: "avatar" %>
              <% end %>
            <% end %>
            <%= link_to do %>
              <i class="fa-solid fa-sailboat"></i>
            <% end %>
            <%= link_to do %>
              <i class="fa-regular fa-map"></i>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link", id: "font_link" do %>
              <span class="sr-only">"Se connecter"</span>
              <i class="fa-regular fa-user"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
