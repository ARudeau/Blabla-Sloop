<div class="col-md-4 mb-4">
  <%= link_to sloop_path(sloop), style: "text-decoration: none; color: inherit;" do %>
  <div class="card-sloop">
    <% if sloop.photos.any? %>
      <%= cl_image_tag sloop.photos.first.key %>
    <% else %>
      <img class="card-img-top" src="default_image.jpg" alt="Default image">
    <% end %>
    <div class="card-sloop-infos">
      <h2 class="card-title"><%= sloop.name %></h2><br>
      <p class="card-text owner-text">
        <% if sloop.user.photo.attached? %>
          <%= cl_image_tag sloop.user.photo.key, class: "card-sloop-user avatar-bordered", style: "width: 40px; height: 40px; border-radius: 50%;" %>
        <% else %>
          <%= image_tag "default_avatar.png", class: "card-sloop-user avatar-bordered", style: "width: 40px; height: 40px; border-radius: 50%;" %>
        <% end %>
        <%= sloop.category%>
        <%= sloop.user.first_name %>
        <%= sloop.user.last_name %></p>
        <%# Si je possÃ¨de le sloop et qu'il n'a pas de rides, je peux le supprimer %>
        <% if current_user == sloop.user && sloop.rides.empty? %>
          <%= link_to "Supprimer",sloop_path(sloop), data: { turbo_method: :delete }, class: "text-danger text-decoration-none" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
