<div class="banner no_home" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/drgeetoka/image/upload/e_blur:1500/v1724331976/alex-perez-vX29CtVP3jc-unsplash_j6yxac.jpg);">
    <h2 class="logo-title">Détails du voyage</h2>
</div><br>

<div class="container">
  <%= link_to rides_path do %>
    <i class="fa-solid fa-arrow-left-long"></i>
  <% end %><br>
  <!-- Carte de détails du voyage -->
  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <p class="card-text"><%= @ride.details %></p>
      <hr>
      <!-- Informations utilisateur -->
      <div class="d-flex align-items-center">
        <% if @ride.sloop.user.photo.attached? %>
          <%= link_to (cl_image_tag @ride.sloop.user.photo.key, class: "rounded-circle me-3", style: "width: 60px; height: 60px;"), user_path(@ride.sloop.user) %>
        <% else %>
          <%= image_tag "default_avatar.png", class: "rounded-circle me-3", style: "width: 60px; height: 60px;" %>
        <% end %>
        <div>
          <h5 class="mb-0"><%= @ride.sloop.user.first_name %> <%= @ride.sloop.user.last_name %></h5>
          <p class="mb-0">Utilisateur.rice</p>
        </div>
      </div>
    </div>
    <hr>
      <div class="travel_info">
        <span><i class="fa-solid fa-play"></i> <%= @ride.start_port %></span>
        <span><%= l(@ride.start_date, format: '%d/%m/%Y') %></span>
      </div>
      <div class="travel_info">
        <span><i class="fa-solid fa-flag-checkered"></i> <%= @ride.end_port %></span>
        <span><%= l(@ride.end_date, format: '%d/%m/%Y') %></span>
      </div>
    <br>
  </div>
  <hr>

  <div class="col-md-12 map_ride" style="height: 400px;">
    <div class="card shadow-sm h-100 mb-3">
      <div class="card-body">
        <h4 class="card-title text-center "><i class="fa-regular fa-map"></i> </h4>
        <hr>
        <div class="my-3 shadow p-3 mb-5" style="height: 85%;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
  <hr>

  <%# <h2 class="subtitle">Le Slooper</h2>
  <div class="card_center">
    <%= render 'usercard', user: @ride.sloop.user >
  </div>
  <hr> %>


  <h2 class="subtitle">Le bateau</h2>
  <div class="card_center">
    <%= render 'shared/sloopcard', sloop: @ride.sloop %>
  </div>
  <hr>

  <% if @ride.max_capacity_reached? %>
    <div class="capacity_reach sorry_text">
      <div class="division">
        <h2><i class="fa-regular fa-face-frown fa-xl"></i>  Désolé, le trajet est complet.</h2>
        <p>Mais vous pouvez toujours jeter un oeil aux autres propositions.</p>
      </div>
    </div>
  <% else %>
  <div class="subtitle card_center">
    <h2>Informations pour le Slooper</p>
  </div>

    <%= simple_form_for [@ride, @traveller_ride] do |f| %>

    <div class="mb-3 traveller_info_container">
      <%= f.input :info, placeholder: "Quelles sont les informations que vous voulez partager/donner au Slooper ?", input_html: { class: "traveller_info" }, wrapper_html: { class:"tranveller_info_wrapper"}, label: false %>
      <%# <label for="exampleFormControlTextarea1" class="form-label"></label> %>
      <%# <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Quelles sont les informations que vous voulez partager/donner au Slooper ?" rows="3"></textarea> %>
    </div>

    <div class="centered_button">
      <%= button_to "Demande de réservation",  dashboard_path, class: "btn btn-primary size_large" %>
    </div>
    <% end %>
  <% end %>
</div>
