<div class="banner no_home" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/drgeetoka/image/upload/e_blur:1500/v1724331976/alex-perez-vX29CtVP3jc-unsplash_j6yxac.jpg);">
  <div class="container">
    <h2>Détails du trajet</h2>
  </div>
</div><br>

<div class="travel_info">
  <span><%= @ride.start_port %></span>
  <span><%= l(@ride.start_date, format: '%d/%m/%Y') %></span>
</div>
<div class="travel_info">
  <span><%= @ride.end_port %></span>
  <span><%= l(@ride.end_date, format: '%d/%m/%Y') %></span>
</div>

<div class="col-md-12 map_ride" style="height: 400px;">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h4 class="card-title text-center "><i class="fa-solid fa-location-dot text-warning"></i> </h4>
        <hr>
        <div class="my-3 shadow p-3 mb-5" style="height: 85%;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>

<div class="subtitle">
  <p>Informations pour le Slooper</p>
</div>

<div class="mb-3 traveller_info">
  <label for="exampleFormControlTextarea1" class="form-label"></label>
  <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Quelles sont les informations que vous voulez partager/donner au Slooper ?" rows="3"></textarea>
</div>
<button type="button" class="btn btn-primary size_large">Ajouter</button>

<div class="card_center">
<%= render 'usercard', user: @ride.sloop.user %>
</div>
<%= render 'shared/sloopcard', sloop: @ride.sloop %>

<%= button_to "Demande de réservation",  ride_traveller_rides_path(@ride), class: "btn btn-primary size_large" %>
