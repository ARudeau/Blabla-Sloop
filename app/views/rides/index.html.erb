<div class="container mb-3">

  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: rides_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Recherche",
              id: "search-query"
          %>
        <%= submit_tag "Rechercher", name: "", class: "btn btn-primary",id: "search-btn"  %>
      <% end %>
    </div>
  </div>

  <div class="cards mt-2">
    <div class="row">
      <div>
        <h1 class="display-4 text-center my-4">Tous les voyages proposés</h1>
        <div class="d-flex justify-content-evenly align-items-center mb-3">
          <%= link_to "Demander un voyage", new_ride_request_path, class: "btn btn-primary" %>
        </div>
        <hr>
        <span class="mb-3 d-block">
          <% if @rides.empty? %>
            <em><%= " Aucune proposition de voyage disponible pour le moment." %>
            </em>
            <br>
            <%= link_to rides_path do %>
              <i class="fa-solid fa-arrow-left-long"> Retrouvez tous les voyages disponnibles</i>
            <% end %>
          <% else %>
            <span class="mb-3 d-block"><em>
              <%= "#{pluralize(@rides.count, @rides.size == 1 ? "Résultat" : "Résultats")}"  %></em>
            </span>
          <% end %>
        </span>
      </div>
      <% @rides.each do |ride| %>
        <%= render "shared/cardride", ride: ride %>
      <% end %>
      <p><br></p>
    </div>
  </div>
</div>
