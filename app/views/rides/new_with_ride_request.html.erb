<div class="container">
  <div class="row justify-content-center">
    <div class="col col-sm-8 col-lg-4">
      <div class="form-login">
      <%# ################# formulaire de sloop de demande ############ %>
      <h2><%= image_tag "logo-sloop.png", height: 30, width: 30, alt: "Logo" %> BlablaSloop</h1>
      <h4>Détails pour l'embarquement</h2>
      <%= render "shared/detailriderequest" %>
      <%= simple_form_for([@ride_request, @ride]) do |f| %>
        <div data-controller="newride" data-newride-capacity-by-sloop-value="<%= @capacity_by_sloop.to_json %>">
          <%= f.association :sloop, label: "Choisissez votre bateau", collection: @sloops, label_method: :name, include_blank: false, input_html: { "data-newride-target": "sloop", "data-action": "change->newride#updateCapacity" } %>
          <%= f.input :start_date, as: :string,
            label: "Date de début (non modifiable)",  readonly: true %>
          <%= f.input :end_date, as: :string,
            label: "Date de fin (non modifiable)",  readonly: true  %>
          <%= f.input :capacity, label: "Capacité", input_html: { min: '1', step: 'any' , "data-newride-target": "capacity" } %>
          <%= f.input :details, label: "Détails" %>
          <%= f.input :start_port, label: "Port de départ (non modifiable)", readonly: true  %>
          <%= f.input :end_port,  label: "Port d'arrivée (non modifiable)", readonly: true %>
          <%= f.submit "Valider la demande", class: "btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
